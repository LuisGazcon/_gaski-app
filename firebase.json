{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"hosting": {
		"public": "public",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"emulators": {
		"ui": {
			"enabled": true,
			"port": 5000
		},
		"hosting": {
			"port": 5001
		},
		"firestore": {
			"port": 5002
		},
		"auth": {
			"port": 5003
		}
	}
}
