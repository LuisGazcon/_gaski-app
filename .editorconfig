root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{js,jsx,ts,tsx,json}]
indent_style = tab
tab_width = 2

[*.{css,scss}]
indent_style = tab
tab_width = 4

[*.{sass}]
indent_style = space
tab_width = 4

[*.{html,xhtml,htm}]
indent_style = tab
tab_width = 4